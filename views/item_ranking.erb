<!--参考: https://github.com/k2works/sinatra_rakuten_api-->
<div class="starter-template">
  <h1>
    <%= @age %>代
    <% @sexsex = '男性' ; @sexsex = '女性' if @sex == '1' %>
    <%= @sexsex %>のランキングTOP 30</h1>
    <table rules="all" class="container">
      <tr>
        <th>No</th>
        <th>商品名</th>
        <th>値段</th>
      </tr>
      <% no = 0 %>
      <% @rankings.each do |ranking| %>            
      <% no += 1 %>
      <tr>            
        <td><%= no %></td>
        <td><%= ranking.name %></td>
        <td><%= ranking.price %></td>
      </tr>
      <% end %>                    
    </table>          
</div>
